<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fran.chatoffline.controller.MainController">

    <!-- Barra superior -->
    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #1c1a1a;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <children>
                <ImageView fitHeight="24.0" fitWidth="24.0" opacity="0.5" preserveRatio="true">
                    <image>
                        <Image url="@../img/logo.png" />
                    </image>
                    <HBox.margin>
                        <Insets bottom="10.0" />
                    </HBox.margin>
                </ImageView>

                <Label opacity="0.5" style="-fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-font-size: 14px;" text="Chat-OFFLine">
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <Button mnemonicParsing="false" onAction="#handleMinimize" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="—">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleToggleMaximize" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="❐">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>

                <Button mnemonicParsing="false" onAction="#handleClose" opacity="0.5" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="✕">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>
    </top>

    <!-- PANEL IZQUIERDO -->
    <!-- xml -->
    <left>
        <VBox prefHeight="556.0" prefWidth="351.0" spacing="10" styleClass="sidebar">
            <Label styleClass="sidebar-title" text="Chats" />

            <ScrollPane fitToWidth="true" styleClass="chat-scroll">
                <VBox spacing="10">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <!-- Repite este bloque para cada chat -->
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="chatHbox">
                        <Circle radius="15" styleClass="avatar" />
                        <Label styleClass="chat-name" text="Juan" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button styleClass="masInformacionBoton" text="+" />
                    </HBox>
                </VBox>
            </ScrollPane>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Circle radius="10" styleClass="active-dot" />
                <Label styleClass="active-label" text="Tú (Activo)" />
            </HBox>
        </VBox>
    </left>

    <!-- PANEL DERECHO -->
    <center>
        <StackPane fx:id="mainArea" styleClass="main-area">
            <VBox alignment="CENTER" prefHeight="556.0" prefWidth="636.0">
                <StackPane alignment="CENTER">
                    <Circle radius="100" styleClass="mail-circle" />
                    <Label styleClass="mail-icon" text="✉" />
                </StackPane>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
